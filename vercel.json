{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/sw.js",
      "headers": { 
        "cache-control": "no-cache",
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "continue": true
    },
    {
      "src": "/assets/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/sound/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/js/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "Content-Type": "application/javascript; charset=utf-8"
      },
      "continue": true
    },
    {
      "src": "/css/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "Content-Type": "text/css; charset=utf-8"
      },
      "continue": true
    },
    { 
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}