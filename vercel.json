{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/sound/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/sound/$1"
    },
    {
      "src": "/assets/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/sound/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(css|js)/.*",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/sw.js",
      "headers": { 
        "cache-control": "no-cache",
        "Content-Type": "application/javascript"
      },
      "continue": true
    },
    {
      "src": "/manifest.json",
      "headers": { "cache-control": "no-cache" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}